@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<h1>Roles</h1>
<a asp-action="Create" class="btn btn-primary">Create a Role</a>
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td><a class="btn btn-primary" asp-action="Update" asp-routeid="@role.Id">Update Role</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>